<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/extra_small_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/layout_scanner_list_row_image_bonded">

        <TextView
            android:id="@+id/layout_scanner_list_row_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/medium_text"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/layout_scanner_list_row_text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/small_medium_text"
            android:layout_gravity="center_horizontal" />
        
    </LinearLayout>
    
    <ImageView
        android:id="@+id/layout_scanner_list_row_image_bonded"
        android:layout_width="@dimen/medium_large_margin"
        android:layout_height="@dimen/medium_large_margin"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/medium_margin"
        android:scaleType="centerCrop"
        android:contentDescription="@string/layout_scanner_list_row_bluetooth_bonded" />
    
</RelativeLayout><!-- From: file:/Users/mshzhb/StudioProjects/iankle%20game/app/src/main/res/layout/layout_scanner_list_row.xml -->